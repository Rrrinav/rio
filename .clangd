# .clangd
CompileFlags:
  Add:
    # 1. Force C++23 globally
    - -std=c++23
    - -stdlib=libc++
    - -Wall
    - -fprebuilt-module-path=./bin/pcms/
    - -fprebuilt-module-path=./bin/std/

  Compiler: clang++

# 4. Force .cppm files to be treated as Module Interfaces
# (Fixes "Unknown type name 'module'" errors)
---
If:
  PathMatch: .*\.cppm

CompileFlags:
  Add:
    - -x
    - c++-module

If:
  PathMatch: .*\.c

CompileFlags:
  Add:
    - -std=c23
